<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>
    <!--START VIEWS-->
        <!-- FORM VIEW-->
        <record model="ir.ui.view" id="view_form_budget">
            <field name="name">Budget</field>
            <field name="model">budget.core.budget</field>
            <field name="arch" type="xml">
                <form string="Budget">
                    <header>
                        <button
                            string="Set to Active"
                            name="active"
                            type="workflow"
                            states="draft" />
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,active,closed"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" default_focus="1" placeholder="Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="section_id"/>
                                <field name="sub_section_id"/>
                                <field name="start_date"/>
                                <field name="end_date"/>

                            </group>
                            <group>
                                <field name="write_date" attrs="{'invisible': True}"/>
                                <field name="initial_expenditure_amount"  attrs="{'invisible': [('write_date', '!=', False)]}"/>
                                <field name="expenditure_amount"  attrs="{'invisible': [('write_date', '==', False)]}"/>
                            </group>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                        <notebook>
                            <page string="Histories">
                                <field name="history_ids">
                                    <tree create="false" edit="true">
                                        <field name="name"/>
                                        <field name="expenditure_amount"/>
                                        <field name="from_budget_id"/>
                                        <field name="to_budget_id"/>
                                        <field name="change_date"/>
                                        <field name="remarks"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!--TREE VIEW-->
        <record model="ir.ui.view" id="view_tree_budget">
            <field name="name">Budget</field>
            <field name="model">budget.core.budget</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="expenditure_amount"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
    <!--END VIEWS-->

    <!--START ACTIONS-->
        <!--Budget Action-->
        <record model="ir.actions.act_window" id="action_budget">
            <field name="name">Budget</field>
            <field name="res_model">budget.core.budget</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,pivot,graph</field>
            <field name="view_id" ref="view_tree_budget"/>
            <!--<field name="domain">[('is_project', '=', True)]</field>-->
            <field name="context">{'form_view_ref': 'budget_core.view_form_budget'}</field>
        </record>
        <!--END ACTIONS-->
    </data>
</openerp>