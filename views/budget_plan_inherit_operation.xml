<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <!--START VIEWS-->
        <!-- FORM VIEW-->
        <record model="ir.ui.view" id="view_form_budget_plan_inherit_operation">
            <field name="name">Budget Plan Inherit</field>
            <field name="model">budget.core.budget.plan</field>
            <field name="inherit_id" ref="view_form_budget_plan"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="before">
                    <group groups="base.group_system">
                        <field name="is_operation_plan" />
                    </group>
                </xpath>

            </field>
        </record>
        <!--TREE VIEW-->
        <record model="ir.ui.view" id="view_tree_budget_plan_inherit_operation">
            <field name="name">Budget Plan Inherit</field>
            <field name="model">budget.core.budget.plan</field>
            <field name="inherit_id" ref="view_tree_budget_plan"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='approved_amount']" position="before">
                    <field name="is_operation_plan" groups="base.group_system"/>
                </xpath>
            </field>
        </record>
    <!--END VIEWS-->

    <!--START ACTIONS-->
        <!--Budget Action-->
        <record model="ir.actions.act_window" id="action_budget_plan_inherit_operation">
            <field name="name">Budget Plan</field>
            <field name="res_model">budget.core.budget.plan</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,pivot,graph</field>
            <field name="view_id" ref="view_tree_budget_plan_inherit_operation"/>
            <field name="domain">[('is_operation_plan', '=', True)]</field>
            <field name="context">{'default_is_operation_plan': True,
                'form_view_ref': 'budget_core.view_form_budget_plan_inherit_operation'}
            </field>
        </record>
    <!--END ACTIONS-->
    </data>
</odoo>